# Server Configuration
PORT=5001
NODE_ENV=development

# Production Mode - Set to 'true' to serve built client files
# When false, client runs separately on Vite dev server (port 5173)
SERVE_CLIENT=false

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=biogas_mis
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_DIALECT=mysql
DB_LOGGING=false

# JWT Configuration
JWT_SECRET=change_this_to_a_secure_random_string_in_production
JWT_REFRESH_SECRET=change_this_to_another_secure_random_string_in_production
JWT_EXPIRY=24h
JWT_REFRESH_EXPIRY=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:5173
CORS_CREDENTIALS=true

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Email Configuration (Defaults - can be overridden in DB)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@biogas.com

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_TIMEOUT_MINUTES=30

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log
